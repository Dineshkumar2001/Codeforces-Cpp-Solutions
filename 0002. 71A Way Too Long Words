#include <iostream>
 
using namespace std;
 
int main()
{
    int n;
    cin>>n;
    for(int i=0;i<n;i++){
        string str;
        cin>>str;
        int size=str.length();
        if(size<=10){
            cout<<str;
            cout<<endl;
        }
        else if(size>10){
            cout<<str[0]<<size-2<<str[size-1];
            cout<<endl;
        }
    }
 
    return 0;
}
