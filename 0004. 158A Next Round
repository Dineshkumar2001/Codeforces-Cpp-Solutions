#include <iostream>

using namespace std;

int main()
{
    int coun=0;
    int n,k;
    cin>>n>>k;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    for(int j=0;j<n;j++){
        if(arr[j]>= arr[k]&& arr[j]>0){
            coun++;   
        }
    }
    cout<<coun;

    return 0;
}
